<%= form_for(@request) do |f| %>
  <% if @request.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@request.errors.count, "error") %> prohibited this request from being saved:</h2>

      <ul>
      <% @request.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :requester %><br>
    <%= f.select :requester, @donor_names.map { |d| [d["name"], d["id"]["$oid"]] }, id: "requester"  %>
  </div>
  <div class="field">
    <%= f.label :reason %><br>
    <%= f.text_field :reason, id: "reason" %>
  </div>
  <div class="actions">
    <%= f.submit %>
    <input type="button" onclick="javascript:sendNotification()">Send Notification</input>
  </div>
<% end %>
